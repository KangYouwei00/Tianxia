# Special buildings for Chinese tributaries
castle = {
	# Chinese Honor Guards
	ca_chinese_honor_guard_1 = {
		desc = ca_chinese_honor_guard_1_desc
		potential = {
			FROM = {
				OR = {
					trait = dragon_bride_married
					any_spouse = {
						is_alive = yes
						trait = dragon_bride_married
					}
					any_child = {
						is_alive = yes
						any_spouse = {
							is_alive = yes
							trait = dragon_bride_married
						}
					}
					AND = {
						OR = {
							is_tributary = {
								type = chinese_client_state
							}
							is_tributary = {
								type = chinese_protectorate
							}
						}
						suzerain = {
							is_chinese_emperor_trigger = yes
						}
					}
				}
				capital_scope = {
					province = ROOT
					capital_holding = {
						title = FROMFROM
					}
				}
			}
		}
		is_active_trigger = {
			FROM = {
				NOR = {
					any_war = {
						any_attacker = {
							character = FROM
						}
						any_defender = {
							is_chinese_emperor_trigger = yes
						}
					}
					any_war = {
						any_attacker = {
							is_chinese_emperor_trigger = yes
						}
						any_defender = {
							character = FROM
						}
					}
					primary_title = {
						has_title_flag = pretender_chinese_empire
					}
				}
			}
		} 
